{% extends 'base.html.twig' %}
{% block title %}Edit - {{ item.title }}{% endblock %}
{% block body %}
    <h1>Edit - {{ item.title }}</h1>

    <form action="{{ path('item_update', {id: item.id}) }}" method="POST">
        <input type="text" name="title" value="{{ item.title }}" /> <br />
        <textarea name="body" id="" cols="30" rows="10">{{ item.body }}</textarea> <br />
        <input type="submit" name="submit" value="update">
    </form>
{% endblock %}