{% extends 'base.html.twig' %}
{% block title %}Edit - {{ item.title }}{% endblock %}
{% block body %}
    <h1>Edit - {{ item.title }}</h1>

    <form action="{{ path('item_update', {id: item.id}) }}" method="POST">

        <div class="form-group">

            <label for="form-title">Title</label>

            <input class="form-control" id="form-title" type="text" name="title" value="{{ item.title }}" />

        </div>

        <div  class="form-group">

            <label for="item-description">Description</label>

            <textarea class="form-control col-sm-10" name="body" id="item-description">{{ item.description }}</textarea>

        </div>


        <div class="form-group">
            <button class="btn btn-primary" type="submit" name="submit">Update</button>
        </div>

    </form>


{% endblock %}